breed [bullets bullet]

bullets-own [
  max-travel-distance
  speed
  travel-distance
]

to fire
  hatch-bullets 1 [
    set max-travel-distance 8
    set speed 1
    set travel-distance 0

    set color white
    set shape "bullet"
    set size 0.5
  ]
end

to do-bullet-logic
  fd speed
  set travel-distance travel-distance + speed
  if travel-distance > max-travel-distance [
    die 
  ]
end
